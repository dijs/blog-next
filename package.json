{
  "name": "blog-next",
  "homepage": "https://blog.richardvanderdys.com",
  "version": "1.0.0",
  "dependencies": {
    "classnames": "^2.2.6",
    "date-fns": "^1.30.1",
    "loadable-components": "^2.2.3",
    "node-sass": "^4.11.0",
    "parse-md": "^1.0.3",
    "raw.macro": "^0.2.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-helmet": "^5.2.0",
    "react-markdown": "^4.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "2.1.3"
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "react-snap",
    "sw": "sw-precache --root=build --config=sw-precache-config.js --verbose",
    "add-domain": "echo \"blog.richardvanderdys.com\" > build/CNAME",
    "predeploy": "npm run build && npm run sw && npm run add-domain",
    "deploy": "gh-pages -d build -r \"https://github.com/dijs/blog-next.git\""
  },
  "reactSnap": {
    "skipThirdPartyRequests": true,
    "inlineCss": true
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "prettier": "^1.16.4",
    "react-snap": "^1.23.0",
    "source-map-explorer": "^1.6.0",
    "sw-precache": "^5.2.1"
  }
}
